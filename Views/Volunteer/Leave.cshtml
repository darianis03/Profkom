@model Profkom.Models.VolunteerLeaveModel

@{
    ViewData["Title"] = "Покинуть Команду";
}
<head>
    <link rel="stylesheet" href="~/css/leave.css"/>

    <title>@ViewData["Title"]</title>
</head>

<div class="jumbotron">
    <h1 class="display-4">Покинуть Команду</h1>
    <p class="lead">Мы сожалеем о вашем решении. Пожалуйста, оставьте нам сообщение о причинах вашего ухода.</p>
</div>

 @if (Model.IsApplied)
{
    <div class="alert alert-success" role="alert">
        Спасибо за регистрацию! Ваш запрос находится в ожидании.
    </div>
}
 else
 {
     <div class="container">
         <div class="row justify-content-center">
             <form method="post" class="needs-validation" novalidate>
                 <div class="row">
                     <div class="col-md-6">
                         <!-- Left Column: Form Fields -->
                         <div class="form-group">
                             <label for="Reason">Причина Ухода:</label>
                             <textarea asp-for="Reason" class="form-control" id="Reason" name="Reason" required></textarea>
                             <div class="invalid-feedback">
                                 Пожалуйста, укажите причину вашего ухода.
                             </div>
                         </div>

                         <div class="form-group">
                             <label for="Confirm">Если вы подтвердите свое решение, то вы отказываетесь от всех благ Союза и сможете вернуться к нам не ранее, чем через 1 год и 6 месяцев.</label>
                             <select asp-for="Confirm" class="form-control" id="Confirm" name="Confirm" required>
                                 <option value="">Выберите...</option>
                                 <option value="Да">Да</option>
                                 <option value="Нет">Нет</option>
                             </select>
                             <div class="invalid-feedback">
                                 Пожалуйста, выберите один из вариантов.
                             </div>
                         </div>

                         <button type="submit" class="btn btn-primary">Отправить</button>
                     </div>
                 </div>
             </form>
         </div>
     </div>
 }
