@model Profkom.Models.RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<head>
    <link rel="stylesheet" href="~/css/account/register.css"/>
</head>

<div class="container">
    <div class="row">
        <div class="col-md-6 left-column">
            <div>
                <h1>@ViewData["Title"]</h1>
                <p>Заполните следующую форму, чтобы создать новую учетную запись.</p>
            </div>
        </div>

        <div class="col-md-6">
            <form method="post" class="mt-4">
                <h2 class="text-center">Пожалуйста, введите ваши данные</h2>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label for="Email">Email</label>
                    <input asp-for="Email" class="form-control mt-1" required/>
                    <span asp-validation-for="Email" class="text-danger mt-1"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="Password">Пароль</label>
                    <input asp-for="Password" class="form-control mt-1" required/>
                    <span asp-validation-for="Password" class="text-danger mt-1"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="ConfirmPassword">Подтвердите пароль</label>
                    <input asp-for="ConfirmPassword" class="form-control mt-1" required/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger mt-1"></span>
                </div>

                <div class="form-check mb-3">
                    <input type="checkbox" asp-for="AcceptRules" class="form-check-input mt-1" required/>
                    <label asp-for="AcceptRules" class="form-check-label">*Я принимаю все правила и требования.</label>
                </div>

                <div class="form-check mb-3">
                    <input type="checkbox" class="form-check-input mt-1"/>
                    <label class="form-check-label">Получать новости и обновления.</label>
                </div>

                <button type="submit" class="btn btn-primary mt-3 mb-3">Зарегистрироваться</button>
            </form>
        </div>
    </div>
</div>